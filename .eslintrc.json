{
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended"
  ],

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "quotes": ["error", "single"]
  },
  "ignorePatterns": ["src/js/script.min.js"]
}
